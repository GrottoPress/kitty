{
  "name": "@grottopress/kitty",
  "type": "module",
  "version": "0.10.1",
  "description": "Kitty is a collection of utilities for SvelteKit",
  "license": "MIT",
  "author": {
    "name": "GrottoPress",
    "email": "info@grottopress.com",
    "url": "https://www.grottopress.com"
  },
  "scripts": {
    "dev": "vite dev --port 3000",
    "build": "vite build",
    "package": "svelte-package",
    "preview": "vite preview --port 3000",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest tests/unit",
    "test:unit:watch": "npm run test:unit -- --watch",
    "test:e2e": "playwright test tests/e2e",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint ."
  },
  "devDependencies": {
    "@playwright/test": "^1.22.2",
    "@sveltejs/adapter-node": "^2.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/package": "^2.2.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@types/jest": "^29.2.4",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.15.0",
    "eslint-plugin-svelte": "^2.32.2",
    "isomorphic-fetch": "^3.0.0",
    "svelte": "^4.1.1",
    "svelte-check": "^3.1.4",
    "svelte-preprocess": "^5.0.0",
    "svelte2tsx": "^0.6.10",
    "ts-jest": "^29.0.3",
    "tslib": "^2.3.1",
    "typescript": "^5.1.6",
    "vite": "^5.0.0"
  },
  "peerDependencies": {
    "@sveltejs/kit": "^1.0.0 || ^2.0.0",
    "svelte": "^3.44.0 || ^4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GrottoPress/kitty.git"
  },
  "homepage": "https://github.com/GrottoPress/kitty#README",
  "keywords": [
    "svelte",
    "sveltekit"
  ],
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "svelte": "./dist/server/index.js"
    }
  }
}
