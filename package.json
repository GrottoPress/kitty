{
  "name": "@grottopress/kitty",
  "type": "module",
  "version": "0.17.0",
  "description": "Kitty is a collection of utilities for SvelteKit",
  "license": "MIT",
  "author": {
    "name": "GrottoPress",
    "email": "info@grottopress.com",
    "url": "https://www.grottopress.com"
  },
  "scripts": {
    "dev": "vite dev --port 3000",
    "build": "svelte-kit sync && vite build",
    "package": "svelte-kit sync && svelte-package",
    "preview": "vite preview --port 3000",
    "test": "pnpm run test:unit && pnpm run test:e2e",
    "test:unit": "vitest --watch=false tests/unit",
    "test:unit:watch": "pnpm run test:unit -- --watch",
    "test:e2e": "playwright test",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint ."
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.55.0",
    "@sveltejs/adapter-node": "^5.3.1",
    "@sveltejs/kit": "^2.37.0",
    "@sveltejs/package": "^2.5.0",
    "@sveltejs/vite-plugin-svelte": "^5.1.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/svelte": "^5.2.8",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.3.1",
    "eslint": "^9.34.0",
    "eslint-plugin-svelte": "^3.12.1",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "svelte": "^5.38.6",
    "svelte-check": "^4.3.1",
    "svelte-preprocess": "^6.0.3",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@sveltejs/kit": "^2.0.0",
    "svelte": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GrottoPress/kitty.git"
  },
  "homepage": "https://github.com/GrottoPress/kitty#README",
  "keywords": [
    "svelte",
    "sveltekit"
  ],
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "svelte": "./dist/server/index.js"
    }
  },
  "packageManager": "pnpm@10.15.1+sha512.34e538c329b5553014ca8e8f4535997f96180a1d0f614339357449935350d924e22f8614682191264ec33d1462ac21561aff97f6bb18065351c162c7e8f6de67"
}
