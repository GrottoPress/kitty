{
  "name": "@grottopress/kitty",
  "type": "module",
  "version": "0.16.2",
  "description": "Kitty is a collection of utilities for SvelteKit",
  "license": "MIT",
  "author": {
    "name": "GrottoPress",
    "email": "info@grottopress.com",
    "url": "https://www.grottopress.com"
  },
  "scripts": {
    "dev": "vite dev --port 3000",
    "build": "svelte-kit sync && vite build",
    "package": "svelte-kit sync && svelte-package",
    "preview": "vite preview --port 3000",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest --watch=false tests/unit",
    "test:unit:watch": "npm run test:unit -- --watch",
    "test:e2e": "playwright test",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint ."
  },
  "devDependencies": {
    "@playwright/test": "^1.22.2",
    "@sveltejs/adapter-node": "^5.2.9",
    "@sveltejs/kit": "^2.5.27",
    "@sveltejs/package": "^2.2.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/svelte": "^5.2.8",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.0.10",
    "eslint": "^9.0.0",
    "eslint-plugin-svelte": "^3.5.1",
    "jsdom": "^26.1.0",
    "svelte": "^5.1.4",
    "svelte-check": "^4.0.5",
    "svelte-preprocess": "^6.0.3",
    "tslib": "^2.3.1",
    "typescript": "^5.5.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^6.1.1",
    "vitest": "^3.0.0"
  },
  "peerDependencies": {
    "@sveltejs/kit": "^2.0.0",
    "svelte": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GrottoPress/kitty.git"
  },
  "homepage": "https://github.com/GrottoPress/kitty#README",
  "keywords": [
    "svelte",
    "sveltekit"
  ],
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "svelte": "./dist/server/index.js"
    }
  }
}
